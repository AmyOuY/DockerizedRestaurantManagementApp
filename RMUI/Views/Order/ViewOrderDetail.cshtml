@model RMUI.Models.OrderDetailDisplayModel

@{
    ViewData["Title"] = "ViewOrderDetail";
}

<h1 class="text-center">An Order Detail by Table @Html.DisplayFor(model => model.TableNumber)</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TableNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TableNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Attendant)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Attendant)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FoodName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FoodName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
    </dl>
</div>

<div>
    @Html.ActionLink("Edit", "EditOrderDetail", new { id = Model.Id }) |
    @Html.ActionLink($"Back to Order by Table {Model.TableNumber}", "ViewOrderDetailsByTableNumber", new { tableNumber = Model.TableNumber })
</div>


<div class="row mt-lg-5"></div>
<div class="h4 @TempData["isCacheData"]">@TempData["loadLocation"]</div>