@model IEnumerable<RMUI.Models.OrderDetailDisplayModel>

@{
    ViewData["Title"] = "ViewOrderDetailsByOrderId";
}

<h1 class="text-center">View Order By Table</h1>

<p>
    <a asp-action="CreateOrder">Create New Order</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TableNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attendant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TableNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Attendant)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FoodName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditOrderDetail", new { id = item.Id }) |
                    @Html.ActionLink("Details", "ViewOrderDetail", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "DeleteOrderDetail", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>


<div class="container mt-lg-5">
    <div class="row">
        <div class="col-4">
            <a asp-action="ViewAllUnpaidOrders">Back to Unpaid Order List</a>
        </div>
        <div class="col-4">
            <form asp-action="InsertOrderByTable">
                <div class="form-group">
                    <label for="tNumber" class="h5">Table Number: </label>
                    <input id="tNumber" name="tableNumber" />
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Submit Order" class="btn btn-warning" />
                </div>
            </form>
        </div>
        <div class="col-4"></div>
    </div>
</div>


<div class="row mt-lg-5"></div>
<div class="h4 text-center @TempData["isCacheData"]">@TempData["loadLocation"]</div>